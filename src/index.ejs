<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>nekobato.net</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU"
    crossorigin="anonymous" />
  <link rel="stylesheet" type="text/css" media="screen" href="style.css" />
  <script type="module" src="script.js" defer></script>
</head>

<body>
  <header>
    <h1>nekobato.net</h1>
    <section class="profile">
      <figure><img src="./images/nekobato.png" /></figure>
      <span class="handle">
        <%= profile.handle %>
      </span>
      <span class="realname">
        <%= profile.realname %>
      </span>
      <span class="timezone">
        <%= profile.timezone %>
      </span>
      <ul class="link-list">
        <% profile.links.forEach((link) => { %>
        <li>
          <a href="<%= link.title %>"><span class="<%= link.icon %>"></span></a>
        </li>
        <% }); %>
      </ul>
    </section>
  </header>
  <main>
    <section class="apps">
      <h1>Applications / Interfaces</h1>
      <div class="section-content">
        <% apps.forEach((app) => { %>
        <div class="app-detail">
          <a href="<%= app.url %>">
            <span class="name">
              <%= app.name %>
            </span>
            <span class="description">
              <%= app.text %></span>
          </a>
        </div>
        <% }); %>
      </div>
    </section>
    <section class="education">
      <h1>Education</h1>
      <div class="section-content">
        <ul class="education-list">
          <% education.forEach((edu) => { %>
          <li>
            <span class="from-to">
              <%= edu.from %> -
              <%= edu.to %>
            </span>
            <span class="name">
              <%= edu.name %>
            </span>
          </li>
          <% }); %>
        </ul>
      </div>
    </section>
    <section class="experience">
      <h1>Experience</h1>
      <div class="section-content">
        <ul class="experience-list">
          <% experience.forEach((ex) => { %>
          <li>
            <span class="from-to">
              <%= ex.from %> -
              <%= ex.to %></span>
            <span class="name">
              <%= ex.name %>
            </span>
          </li>
          <% }); %>
        </ul>
      </div>
    </section>
  </main>
  <footer><small>2009 - 2019 (c) nekobato.net</small></footer>
</body>

</html>